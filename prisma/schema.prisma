generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum typeTicket {
  etick
  physical
}

enum statusPayment {
  pending
  failed
  completed
  canceled
  refunded
}

model Client {
  userId   String @id @map("_id")
  fullname String
  phone    String
  email    String
}

model Admin {
  adminId   Int    @id @map("_id")
  fullname String
  username     String @unique
  password  String
}

model Payment {
  id        String        @id @map("_id")
  amount    Float
  status    statusPayment
  createdAt DateTime      @default(now())
}

model Ticket {
  ticketId  String  @id @map("_id")
  userId    String?
  paymentId String?
  soldBy    String?
  scannedBy String?

  type typeTicket

  isPaid Boolean
  isUsed Boolean
}