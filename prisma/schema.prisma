generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
enum typeTicket {
  etick
  physical
}
enum statusPayment {
  pending
  failed
  completed
  canceled
  refunded
}
model Client {
 userId    Int      @id @map("_id")
 firstname String
 lastname  String
 phone     Int
 email     String   @unique
}
model Admin{
  adminId Int @id @map("_id")
  firstname String
  lastname  String
  email     String   @unique
  password  String
}
model Payment {
 id        Int      @id @map("_id")
 amount    Float
 status    statusPayment
 createdAt DateTime @default(now())
}

model Ticket {
 ticketId Int      @id @map("_id")
 userId    Int
 paymentId Int?

 type      typeTicket

 isPaid    Boolean
 isUsed    Boolean
 
}